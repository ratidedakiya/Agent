
# OpenAI API Key (required for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///./ai_tutor.db
# For PostgreSQL: postgresql://username:password@localhost:5432/ai_tutor
# For MySQL: mysql://username:password@localhost:3306/ai_tutor

# Redis Configuration (for caching and message queues)
REDIS_URL=redis://localhost:6379

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Audio Processing
MAX_AUDIO_SIZE_MB=10
SUPPORTED_AUDIO_FORMATS=wav,mp3,ogg,m4a

# TTS Configuration
TTS_PROVIDER=openai
TTS_MODEL=tts-1

# Avatar Configuration
AVATAR_PROVIDER=local
AVATAR_QUALITY=medium

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
MAX_SESSIONS=1000

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=50

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Flags
ENABLE_AVATAR=true
ENABLE_STREAMING=true
ENABLE_QUIZ=true
ENABLE_HOMEWORK_CHECK=true

# Performance
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=30

# Language Support
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,hi,gu,es,fr

# Voice Configuration
DEFAULT_VOICE_STYLE=friendly_male
VOICE_SPEED=1.0
VOICE_PITCH=1.0

# Avatar Configuration
DEFAULT_AVATAR_TEMPLATE=teacher_1
AVATAR_RENDER_QUALITY=medium

# Cache Configuration
CACHE_TTL_SECONDS=300
ENABLE_CACHE=true

# Error Handling
MAX_RETRIES=3
RETRY_DELAY_SECONDS=1

# Development
RELOAD=false
WORKERS=1

